<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_academic_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/academic_sessions"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/image_view_academic_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            app:srcCompat="@drawable/ic_calendar_range_black_48dp" />

        <TextView
            android:id="@+id/text_view_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/classes"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/image_view_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            app:srcCompat="@drawable/ic_google_classroom_black_48dp" />

        <TextView
            android:id="@+id/text_view_line_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Assessments and Notes"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/image_view_line_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            app:srcCompat="@drawable/ic_poll_box_black_48dp" />

        <TextView
            android:id="@+id/text_view_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/users"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/image_view_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            app:srcCompat="@drawable/ic_account_box_black_48dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>